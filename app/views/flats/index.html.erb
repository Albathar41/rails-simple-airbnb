<h1>All our flats (<%= @flats.count %>)</h1>

<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-md-4">
      <div class="flat-card bg-light">
        <img src="https://www.francebleu.fr/s3/cruiser-production/2023/01/f93ac773-2cb5-4779-be3b-4e3af02c9042/1200x680_maxnewsfrfour918465.jpg" class="card-img-top" alt="...">
        <div class="flat-card-content">
          <div class="flat-card-title" style="height: 50px;" >
            <h4><%= flat.name %></h4>
          </div >
          <p style="height: 50px;"><%= flat.address %></p>
          <div class="d-flex">
            <div class="flex align-items-center">
              <i class="fa-solid fa-people-line"><%= flat.number_of_guests %></i>
              <span></span>
            </div>
            <div class="flex align-items-center ms-3">
              <i class="fa-solid fa-euro-sign"><%= flat.price_per_night %></i>
              <span></span>
            </div>
          </div>
        </div>
        <div class="flat-card-actions">
          <%= link_to 'More info', flat_path(flat) %>
          <%= link_to 'Edit', flat_path(flat) %>
          <%= link_to 'Remove', flat_path(flat) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
